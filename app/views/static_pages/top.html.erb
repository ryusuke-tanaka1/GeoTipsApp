<%= provide(:title, "トップページ") %>

<div class="center jumbotron">
  <h1>GeoWiki</h1>
  <br>
  <br>
  <% if logged_in? %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="btn-group-top">
          <%= link_to "GeoGuessrで遊ぶ", 'https://www.geoguessr.com/ja', class: "btn btn-default btn-lg btn-top" %>
          <%= link_to "プロフィール", current_user, class: "btn btn-default btn-lg btn-top" %>
          <%= link_to "Tips一覧", tips_index_path, class: "btn btn-default btn-lg btn-top" %>
          <%= link_to "投稿したTips一覧", user_tips_path(current_user), class: "btn btn-default btn-lg btn-top" %>
          <%= link_to "Tips投稿", new_user_tip_path(current_user), class: "btn btn-default btn-lg btn-top" %>
          <%= link_to "ログアウト", logout_path, method: :delete, class: "btn btn-default btn-lg btn-top" %>
        </div>
      </div>
    </div>
  <% else %>
    <p>
      <%= link_to "ログイン", login_path, class: "btn btn-lg btn-default btn-top" %>
      <%= link_to "新規登録", new_user_path, class: "btn btn-lg btn-default btn-top" %>
    </p>
  <% end %>
</div>