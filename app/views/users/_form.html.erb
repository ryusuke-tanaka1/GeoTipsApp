<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/user_error_messages' %>
  <%= f.label :name, class: "label-#{yield(:form_user)}" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "label-#{yield(:form_user)}" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, class: "label-#{yield(:form_user)}" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, class: "label-#{yield(:form_user)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:submit_user), class: "btn btn-primary btn-block btn-#{yield(:form_user)}" %>
<% end %>